<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bgtwo">

    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="160dp">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="36dp"
            android:src="@drawable/login_icon_phonetwo" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_phone"
            android:background="@android:color/transparent"
            android:hint="手机号"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textColorHint="@android:color/white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:id="@+id/layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_pwd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="36dp"
            android:src="@drawable/login_icon_locktwo" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_pwd"
            android:background="@android:color/transparent"
            android:password="true"
            android:hint="登录密码"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:textColorHint="@android:color/white" />

        <ImageView
            android:id="@+id/login_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/login_icon_eyetwo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp">

        <CheckBox
            android:id="@+id/ch_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/login_soonreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:text="登录"
        android:layout_marginTop="150dp"
        android:textColor="@android:color/holo_red_light"
        android:background="@drawable/btn_bg"/>

</LinearLayout>