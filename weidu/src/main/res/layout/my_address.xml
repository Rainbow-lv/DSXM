<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_border"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#666666"
            android:id="@+id/address_name"
            android:text="李小二"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#666666"
            android:id="@+id/address_phone"
            android:layout_alignParentRight="true"
            android:text="123456"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="10dp"
        android:id="@+id/address_address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="地址 哈哈哈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:textSize="16sp"
            android:textColor="#666666"
            android:id="@+id/address_radio"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设为默认地址"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/address_btn"
                android:id="@+id/address_update"
                android:text="修改"
                android:layout_marginRight="10dp"
                android:layout_width="60dp"
                android:layout_height="30dp" />
            <Button
                android:textColor="#666666"
                android:background="@drawable/address_btn"
                android:id="@+id/address_delete"
                android:layout_alignRight="@+id/address_update"
                android:text="删除"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="30dp"  />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
